<div class="row">
  <div class="col-lg-6 col-md-6 ml-auto mr-auto">
    <div class="card card-login">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="card-header card-header-primary text-center">
          <div class="card-title">
            <%= render "users/shared/links" %>
          </div>
        </div>
        <h3 class="description text-center">Sign up</h3>
        <div class="card-body">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="material-icons">assignment_ind</i>
              </span>
            </div>
            <%= f.select :type, options_for_select(option_select_roles),{},
              class: "form-control selectpicker", "data-style": "btn btn-link" %>
            <span class="input-group-btn">
              <i class="material-icons">expand_more</i>
            </span>
          </div>

          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="material-icons">account_circle</i>
              </span>
            </div>
            <%= f.text_field :username, class: "form-control", placeholder: "ex: nguyen.van.a" %>
          </div>

          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="material-icons">face</i>
              </span>
            </div>
            <%= f.text_field :first_name, class: "form-control", placeholder: "First name" %>
            <div class="gutter-xs"></div>
            <%= f.text_field :last_name, class: "form-control", placeholder: "Last name" %>
          </div>

          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="material-icons">local_post_office</i>
              </span>
            </div>
            <%= f.email_field :email, class: "form-control", placeholder: "Your email" %>
          </div>

          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="material-icons">add_ic_call</i>
              </span>
            </div>
            <%= f.text_field :phone, class: "form-control", placeholder: "Your phone" %>
          </div>

          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="material-icons">lock_outline</i>
              </span>
            </div>
            <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
          </div>

          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="material-icons">confirmation_number</i>
              </span>
            </div>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password confirmation" %>
          </div>
        </div>
        <div class="footer text-center">
          <%= f.submit "Sign Up", class: "btn btn-primary btn-link btn-wd btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
