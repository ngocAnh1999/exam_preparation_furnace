<% if question['type'].eql?('multiple_choice') || question['type'].nil? %>
<div class="question-item multiple-choice">
  <div class="form-group">
    <p class="title-question"></p>
    <%= text_area_tag 'draft_test[questions][][content]', question['content'],
      class: "form-control question-content ckeditor" %>
    <%= hidden_field_tag 'draft_test[questions][][type]', (question['type'] || :multiple_choice) %>
  </div>
  <div class="form-group ml-3">
    <p>Đáp án</p>
    <div class="group-ans">
      <%= render partial: 'field_answer', collection: question['answers_attributes'], as: :answer %>
    </div>
    <button class="btn btn-white shadow border border-sidebar ml-auto"
      onclick="AddAnswers(this)"
      type="button">
      <i class="material-icons">add</i>
    </button>
  </div>
</div>
<% end %>
