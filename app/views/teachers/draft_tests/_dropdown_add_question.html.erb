</div>
<div class="border-bottom border-sidebar gutter-ys"></div>

<script>
  $('.add-multi-choice').on('click', function() {
    $('.title-multichoice.d-none').removeClass('d-none');
    $('#multi-choice-question-partial').append('<%= j render "form_multichoice_question", f: f %>');
  })

  $('.add-essay').on('click', function() {
    $('.title-essay.d-none').removeClass('d-none');
    $('#essay-question-partial').append('<%= j render "form_essay_question", f: f %>');
  })

  $('.add-multi-choice, .add-essay').on('click', function() {
    $.each($('p.title-question'), function(index, element) {
