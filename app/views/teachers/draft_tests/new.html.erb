<%= form_with url: teachers_draft_tests_path, method: :post do |f| %>
  <div class="row">
    <div class="card card-nav-tabs col-md-3">
      <div class="card-body">
        <div class="form-group">
          <%= link_to teachers_draft_tests_path, class: "nav-link pl-0" do %>
            <i class="large material-icons">keyboard_backspace</i> back
          <% end %>
        </div>

        <%= render 'dropdown_add_question', f: f %>

        <div class="d-flex justify-content-start flex-wrap gutter-ys" id="list-question-card"></div>

        <div class="border-bottom border-sidebar gutter-ys"></div>
        <label class="mt-1">Ngày bắt đầu</label>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text pl-0">
              <i class="material-icons">hourglass_top</i>
            </span>
          </div>
          <%= f.text_field "draft_test[start_time]", id: "start_time",
            class: "form-control datetimepicker", placeholder: "mm/dd/yyyy hh:mm tt" %>
        </div>
        <label class="mt-3">Ngày kết thúc</label>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text pl-0">
              <i class="material-icons">hourglass_bottom</i>
            </span>
          </div>
          <%= f.text_field "draft_test[due_time]", id: "due_time",
            class: "form-control datetimepicker", placeholder: "mm/dd/yyyy hh:mm tt" %>
        </div>
        <label class="mt-3">Thời gian làm bài (phút)</label>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text pl-0">
              <i class="material-icons">timelapse</i>
            </span>
          </div>
          <%= f.text_field "draft_test[doing_time]", id: "doing_time",
            class: "form-control", placeholder: "45" %>
        </div>
        <div class="form-check pl-1">
          <label class="form-check-label">
            <%= f.check_box "draft_test[unlimited_flag]", id: "unlimited_flag",
              class: "form-check-input" %>
            Unlimited time
            <span class="form-check-sign">
              <span class="check"></span>
            </span>
          </label>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card card-nav-tabs">
        <div class="card-header card-header-primary text-center">
          <h2 class="card-title">Bài thi nháp</h2>
        </div>
        <div class="card-body">
          <div class="form-group">
            <label for="title">Tiêu đề</label>
            <%= f.text_field "draft_test[title]", id: "title",
              class: "form-control", placeholder: "De kiem tra giua ky..." %>
          </div>
          <div class="form-group">
            <label for="description">Mô tả</label>
            <%= f.text_field "draft_test[description]", id: "description",
              class: "form-control", placeholder: "De thi gom 2 phan trac nghiem va tu luan..." %>
          </div>
          <div class="form-group row justify-content-between">
            <div class="col">
              <label for="mark_id">Trọng số</label>
              <%= f.select "draft_test[mark_id]", options_for_select(@list_marks),
                {}, class: "form-control", id: "mark_id" %>
            </div>
            <div class="col">
              <label for="shuffle_count" class="fix_label">Trộn đề</label>
              <%= f.text_field "draft_test[shuffle_count]", id: "shuffle_count",
                class: "form-control", placeholder: "1" %>
            </div>
          </div>
          <%= render 'form_chapter', f: f %>
          <div class="border-bottom border-sidebar my-4"></div>

          <h3 class="title-multichoice d-none">Phần 1: Trắc nghiệm</h3>
          <div id="multi-choice-question-partial"></div>

          <h3 class="title-essay d-none">Phần 2: Tự luận</h3>
          <div id="essay-question-partial"></div>

          <div class="d-flex align-content-center">
            <small class="padding-ys">Updated at: 30/03/2021 10:33</small>
            <%= f.submit 'Luu nhap', class: "btn btn-secondary ml-auto border border-sidebar" %>
            <button type="submit" class="btn btn-success">Tao bai test</button>
          <div>
        </div>
      </div>
    </div>
  </div>
  <script>
    $('.datetimepicker').datetimepicker({
      icons: {
        time: "fa fa-clock-o",
        date: "fa fa-calendar",
        up: "fa fa-chevron-up",
        down: "fa fa-chevron-down",
        previous: 'fa fa-chevron-left',
        next: 'fa fa-chevron-right',
        today: 'fa fa-screenshot',
        clear: 'fa fa-trash',
        close: 'fa fa-remove'
      }
    });
  </script>
<% end %>
