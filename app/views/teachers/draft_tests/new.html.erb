<div class="row">
  <div class="card card-nav-tabs col-md-3">
    <div class="card-body">
      <div class="dropdown tab-content gutter-ys">
        <button class="btn btn-success dropdown-toggle shadow-lg ml-0" type="button"
          id="dropdownMenuButton" data-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false">
          Tao cau hoi
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <a class="dropdown-item" href="#">Trac nghiem</a>
          <a class="dropdown-item" href="#">Tu luan</a>
        </div>
      </div>
      <div class="border-bottom border-sidebar gutter-ys"></div>
      <div class="d-flex justify-content-start flex-wrap gutter-ys"
        id="list-question-card">
        <div class="btn btn-fab btn-round btn mr-1">1</div>
        <div class="btn btn-fab btn-round btn-warning mr-1">2</div>
        <div class="btn btn-fab btn-round btn mr-1">3</div>
        <div class="btn btn-fab btn-round btn mr-1">4</div>
        <div class="btn btn-fab btn-round btn mr-1">5</div>
      </div>
      <div class="border-bottom border-sidebar gutter-ys"></div>
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text pl-0">
            <i class="material-icons">hourglass_top</i>
          </span>
        </div>
        <input type="text" class="form-control datetimepicker" placeholder="ngay bat dau"
          id="start_time">
      </div>
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text pl-0">
            <i class="material-icons">hourglass_bottom</i>
          </span>
        </div>
        <input type="text" class="form-control datetimepicker" placeholder="ngay ket thuc"
          id="end_time">
      </div>
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text pl-0">
            <i class="material-icons">timelapse</i>
          </span>
        </div>
        <input type="text" class="form-control" placeholder="Thoi gian lam bai"
          id="doing_time">
      </div>
      <div class="form-check pl-1">
        <label class="form-check-label">
          <input class="form-check-input" type="checkbox" value="">
          Unlimited time
          <span class="form-check-sign">
              <span class="check"></span>
          </span>
        </label>
      </div>
    </div>
  </div>
  <div class="col">
    <div class="card card-nav-tabs">
      <div class="card-body">
        <form>
          <div class="form-group">
            <label for="title">Tieu de</label>
            <input type="text" class="form-control" id="title" placeholder="De kiem tra giua ky...">
          </div>
          <div class="form-group">
            <label for="description">Mo ta</label>
            <input type="text" class="form-control" id="description" placeholder="De thi gom 2 phan trac nghiem va tu luan...">
          </div>
          <div class="row">
            <div class="col">
              <label for="level">Khoi</label>
              <input type="text" class="form-control" id="level" placeholder="12">
            </div>
            <div class="col">
              <label for="subject">Mon</label>
              <input type="text" class="form-control" id="subject" placeholder="Toan">
            </div>
            <div class="col">
              <label for="chapter">Chuong</label>
              <input type="text" class="form-control" id="chapter" placeholder="Chuong 1">
            </div>
          </div>

          <div class="border-bottom border-sidebar my-4"></div>
          <h3>1.Phan 1 <small>trac nghiem</small></h3>
          <div class="form-group">
            <p>Cau 1 </p>
            <input type="text" class="form-control" id="question_1" placeholder="Noi dung cau 1">
          </div>

          <div class="input-group">
            <div class="input-group-prepend">
              <div class="form-check-inline">
                <label class="form-check-label">
                  <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                  <span class="form-check-sign">
                    <span class="check"></span>
                  </span>
                </label>
              </div>
            </div>
            <input type="text" class="form-control" placeholder="Noi dung dap an cau 1">
          </div>
          <div class="input-group">
            <div class="input-group-prepend">
              <div class="form-check-inline">
                <label class="form-check-label">
                  <input class="form-check-input filled-in" type="checkbox" id="inlineCheckbox1" value="option1">
                  <span class="form-check-sign">
                    <span class="check"></span>
                  </span>
                </label>
              </div>
            </div>
            <input type="text" class="form-control" placeholder="Noi dung dap an cau 1">
          </div>
          <button type="button" class="btn btn-white shadow-lg border border-sidebar">
            <i class="material-icons">add</i>
          </button>

          <div class="border-bottom border-sidebar my-4"></div>
          <h3>2.Phan 2 <small>tu luan</small></h3>
          <div class="form-group">
            <p>Cau 2 </p>
            <input type="text" class="form-control" id="question_2" placeholder="Noi dung cau 2">
          </div>
          <div class="form-group">
            <label for="">Goi y dap an</label>
            <textarea class="form-control" id="" rows="3"></textarea>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
$('.datetimepicker').datetimepicker({
  icons: {
    time: "fa fa-clock-o",
    date: "fa fa-calendar",
    up: "fa fa-chevron-up",
    down: "fa fa-chevron-down",
    previous: 'fa fa-chevron-left',
    next: 'fa fa-chevron-right',
    today: 'fa fa-screenshot',
    clear: 'fa fa-trash',
    close: 'fa fa-remove'
  }
});
</script>
