<%= form_tag assigned_test_teachers_test_path, method: :post do %>
  <div class="card">
    <div class="card-body">
      <h2 class="text-center">Chia sẻ đề thi</h2>
      <div class="form-group">
        <label class="mr-1">Gửi đề cho: </label>
        <div class="form-check form-check-inline">
          <label class="form-check-label">
            <input class="form-check-input" type="radio" name="groupable_type" id="study_class"
              value="StudyClass"> Lớp
            <span class="circle">
                <span class="check"></span>
            </span>
          </label>
        </div>
        <div class="form-check form-check-inline">
          <label class="form-check-label">
            <input class="form-check-input" type="radio" name="groupable_type" id="group_tutor"
              value="GroupTutor"> Nhóm
            <span class="circle">
                <span class="check"></span>
            </span>
          </label>
        </div>
      </div>
      <div class="form-group studyclass d-none">
        <label>Lớp của tôi</label>
        <div class="d-flex flex-wrap justify-content-between">
          <%= render partial: "myclass", collection: @study_classes, as: :myclass %>
        </div>
      </div>
      <div class="form-group grouptutor d-none">
        <label>Nhóm của tôi</label>
        <div class="d-flex flex-wrap justify-content-between">
          <%= render partial: "myclass", collection: @group_tutors, as: :myclass %>
        </div>
      </div>
      <div class="form-group text-center">
        <%= submit_tag "Gửi đề ", class: "btn btn-round btn-success" %>
      </div>
    </div>
  </div>
  <script>
    $('#study_class').on('click', function() {
      $('.studyclass').removeClass('d-none');
      $('.grouptutor').addClass('d-none');
    })

    $('#group_tutor').on('click', function() {
      $('.grouptutor').removeClass('d-none');
      $('.studyclass').addClass('d-none');
    })
  </script>
<% end %>
