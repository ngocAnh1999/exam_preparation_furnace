<% if question["question_type"].to_i.eql? Settings.question.type.essay %>
<div class="form-group" id="question_<%= question['id'] %>">
  <h4><span class="question-title"></span>(<%= question['score'] %> điểm): <%= question["content"] %></h4>
  <%= hidden_field_tag 'task[answers][][id]', question['id'] %>
  <%= hidden_field_tag 'task[answers][][content]', question['content'] %>
  <%= hidden_field_tag 'task[answers][][suggestion]', question['suggestion'] %>
  <%= hidden_field_tag 'task[answers][][question_type]', question['question_type'] %>
  <%= hidden_field_tag 'task[answers][][score]', question['score'] %>
  <p>Đáp án của học sinh:</p>
  <%= text_area_tag 'task[answers][][text_answer]', question['text_answer'], class: "form-control px-2", disabled: true %>
  <div class="form-group mt-3">
    <div class="form-group col-md-3 pl-0">
      <label>Chấm điểm:</label>
      <%= text_field_tag 'task[answers][][mark]', question['mark'], class: "form-control" %>
    </div>
  </div>
<% end %>
